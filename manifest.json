{
    "name": "MasterPrompt",
    "description": "Enhance ChatGPT prompts using customizable hotkeys.",
    "version": "1.0",
    "manifest_version": 3,
  
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
  
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "action": {
      "default_popup": "popup/popup.html"
    },
  
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*"
        ],
        "js": ["content.js"]
      }
    ],
  
    "commands": {
      "trigger-masterprompt": {
        "suggested_key": {
          "default": "Ctrl+Y"
        },
        "description": "Apply MasterPrompt to current ChatGPT input"
      }
    },
  
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  